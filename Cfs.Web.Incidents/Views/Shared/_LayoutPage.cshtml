<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    @Styles.Render("~/content/theme")
    <!--[if IE]>
        <link rel="stylesheet" type="text/css" href="/content/css/ie.css" />
    <![endif]-->
    @Scripts.Render("~/scripts/app")
    <title>@ViewBag.Title :: CFS Incident Reports</title>
    @RenderSection("AdditionalIncludes", required: false)
</head>
<body>
    @*<div id="page-overlay" class="page-overlay"></div>*@
    <div class="page-container" id="page-container">


        <div class="side-container" id="side-container">
            @RenderSection("Sidebar", required: false)
        </div>
        <div class="content-container">
            <div class="page-content" id="page-body">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)

</body>
</html>
